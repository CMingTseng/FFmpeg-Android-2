<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ly_system_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_ec4c48">

        <LinearLayout
            android:id="@+id/ly_system_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="123px"
            >
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="120px"
                android:layout_height="100px"
                android:padding="26px"
                android:layout_centerVertical="true"
                android:visibility="invisible"
                android:src="@mipmap/icon_back"
                />
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_centerInParent="true"
                android:textSize="54px"
                android:singleLine="true"
                android:textColor="@color/color_white"
                android:text="title"
                android:layout_toRightOf="@+id/iv_back"
                android:layout_toLeftOf="@+id/iv_right"/>

            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="100px"
                android:layout_height="match_parent"
                android:paddingTop="32px"
                android:paddingBottom="32px"
                android:paddingRight="40px"
                android:paddingLeft="2px"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="32px"
                android:textSize="45px"
                android:paddingBottom="32px"
                android:gravity="center"
                android:paddingRight="40px"
                android:paddingLeft="2px"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_white"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/iv_me_dot_t"
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_marginTop="15px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25px"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_ec4c48"/>
</LinearLayout>